        "tooltip-format": "{ipaddr}/{cidr}\n{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "on-click": "sh ~/.scripts/rofi-wifi-menu/rofi-wifi-menu.sh"
    },
    "cpu": {
        "format": "Ôãõ  {usage}%",
