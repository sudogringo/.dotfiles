        "artist-len": 25,
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "ignored-players": ["firefox"]
    },
    "wireplumber": {
        "format": "{icon}  {volume}%",
        "format-muted": "ÔÄ¶",
        "on-click": "pwvucontrol",
